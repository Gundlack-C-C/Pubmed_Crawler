    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "program": "${cwd}/app_server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Scrapy: Crawl Current",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "runspider",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Crawl: pubmed",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "crawl",
                "pubmed",
                "-a",
                "query=NLP",
                "-a",
                "session_id=123"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Run Crawler: Pubmed",
            "type": "python",
            "request": "launch",
            "program": "./app_crawl_pubmed.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "\"Literature Search\" + NLP"
            ]
        },
        {
            "name": "Run Crawler: Pubmed - PROD",
            "type": "python",
            "request": "launch",
            "program": "./app_crawl_pubmed.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "\"Literature Search\" + NLP",
                "--production"
            ]
        }
    ]
}