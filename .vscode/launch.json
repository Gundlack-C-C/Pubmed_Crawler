    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scrapy: Crawl Current",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "runspider",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.json"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Crawl: pubmed",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": [
                "crawl",
                "pubmed",
                "-a",
                "query=NLP",
                "-a",
                "_id=1234"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}